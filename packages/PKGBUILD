#Maintainer: Sanskrit Coders <sanskrit-programmers@googlegroups.com>
pkgname=fonts-sanskrit
pkgver=1.00
pkgrel=1
pkgdesc="Various unicode fonts for Sanskrit (with particular emphasis on Devanagari)."
url="http://github.com/sanskrit-coders/sanskrit-fonts"
license=('custom:OFL')
arch=(any)
devanagari_url="http://raw.githubusercontent.com/sanskrit-coders/sanskrit-fonts/master/fonts/ttf-devanagari-fonts"
source=("$_tarname.tar.gz::https://github.com/sanskrit-coders/sanskrit-fonts/archive/$_relver.tar.gz")
sha256sums=('a4e4dd59b8e0a436b934f0f612c2e91b5932910c6d1c3b7d1a5a9f389c86302b')

package() {
	install -d "$pkgdir/usr/share/fonts/TTF/devanagari"
	install -t "$pkgdir/usr/share/fonts/TTF/devanagari" -m644 devanagari/*.ttf
	install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
